{
  "host": "localhost",
  "port": 3031,
  "public": "../public/",
  "routePrefix" : "api",
  "apiVer" : "v1",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "mongodb": "mongodb://localhost:27017/plannerdb-test",
  "ssl": {
    "enabled": false,
    "sslCertPath": "../.sslcert/"
  },  
  "authentication": {
    "enabled": true,
    "jwt": {
      "audience": "http://localhost:3031/api/v1",
      "issuer": "https://xplanner.auth0.com/",
      "algorithm": "RS256",
      "PEM": true
    },
    "auth0": {
      "jwksUri": "http://localhost:3031/.well-known/jwks.json",
      "strictSsl": false
    }
  }
}
